@page "/"
@using Microsoft.AspNetCore.Components.Web
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@namespace TelehealthApi.Web.Components.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TelehealthApi</title>
    <base href="/" />

    <!-- Standard Blazor CSS -->
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="TelehealthApi.Web.styles.css" />

    <!-- Correct Tailwind CSS CDN -->
    <link href="https://cdn.tailwindcss.com" rel="stylesheet">

    <link rel="icon" type="image/png" href="favicon.png" />

    <!-- HeadOutlet for components to contribute to head -->
    <HeadOutlet render-mode="InteractiveServer" />
</head>
<body>
    <!-- Main Blazor App component, enabling interactive server rendering -->
    <component type="typeof(App)" RenderMode="InteractiveServer" />

    <!-- Blazor Error UI - standard location -->
    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <!-- Blazor Server-side interactivity script -->
    <script src="_framework/blazor.server.js"></script>
</body>
</html>